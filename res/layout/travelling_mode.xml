<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travelling_mode_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/travellingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/traffic_button"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="#494343"
            android:textOff="Accidents Off"
            android:textOn="Accidents On" />

        <TextView
            android:id="@+id/tm_dist_dur_view"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:textColor="#494343" />
    </RelativeLayout>

    <ListView
        android:id="@+id/travelling_mode_sliding_menu"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>